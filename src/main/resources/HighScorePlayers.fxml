<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import java.lang.String?>

<VBox fx:controller="HighScorePlayers" xmlns:fx="http://javafx.com/fxml" stylesheets="MainWindow.css"
    spacing="10" prefHeight="500" prefWidth="450" style="-fx-background-color: aqua">

    <HBox alignment="CENTER">
      <Label text="High Scores" style="-fx-font-size: 40px; -fx-text-fill: linear-gradient(yellow , red);
      -fx-font-weight: bold;"  alignment="CENTER"/>
    </HBox>

    <HBox alignment="CENTER" spacing="15">
      <Label text="Rank" style="-fx-font-size: 20px; -fx-font-weight: bold;-fx-font-style: italic;-fx-text-fill:green;"/>
      <Label text="Name" style="-fx-font-size: 20px; -fx-font-weight: bold;-fx-font-style: italic;-fx-text-fill:green;"/>
      <Label text="Score" style="-fx-font-size: 20px; -fx-font-weight: bold;-fx-font-style: italic;-fx-text-fill:green;"/>
    </HBox>
    <HBox alignment="CENTER" spacing="20">
      <VBox fx:id="vrank"></VBox>
      <VBox fx:id="vname"></VBox>
      <VBox fx:id="vscore"></VBox>
    </HBox>

    <VBox spacing="10" style="-fx-font-size: 14px;" alignment="CENTER">
      <ChoiceBox value="">
        <items>
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="All Difficulty"/>
              <String fx:value="Normal Difficulty" />
              <String fx:value="Hard Difficulty" />
              <String fx:value="Insane Difficulty" />
            </FXCollections>
        </items>
        <value>
            <String fx:value="All Difficulty" />
        </value>
      </ChoiceBox>
    </VBox>
</VBox>
